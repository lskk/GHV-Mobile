<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    android:gravity="top"
    android:background="@color/gray1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Admin"
    tools:showIn="@layout/admin_page_activity"
    android:orientation="vertical">


    <Button
        android:layout_margin="5dp"
        android:background="@drawable/bg_common_button"
        android:textColor="@color/gray1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Approval Relawan"
        android:id="@+id/admin_btnapprovalrelawan"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_margin="5dp"
        android:background="@drawable/bg_common_button"
        android:textColor="@color/gray1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Approval Program"
        android:id="@+id/admin_btnapprovalprogram"
        android:layout_gravity="center_horizontal" />
    <Button
        android:layout_margin="5dp"
        android:background="@drawable/bg_common_button"
        android:textColor="@color/gray1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Program"
        android:id="@+id/admin_btnsubmitprogram"
        android:layout_gravity="center_horizontal" />

</LinearLayout>