<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="10dp"
    tools:context=".Fragments.MarkerUserFragment">
    <RelativeLayout
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_porcelen"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

            <ImageView
                android:layout_marginRight="5dp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:id="@+id/fragment_user_thumb"
                android:src="@mipmap/ic_launcher"
                />



        <LinearLayout
            android:id="@+id/bgname"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_button_rounded_accent"
            android:paddingRight="8dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/fragment_user_thumb"
            android:paddingBottom="6dp"
            android:paddingLeft="8dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Name"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:id="@+id/fragment_user_name"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:textColor="#fff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="HP"
                android:id="@+id/fragment_user_hp"
                android:textColor="#fff" />


        </LinearLayout>
        <Button
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Lihat Detail"
            android:id="@+id/fragment_user_BTN_detail"
            android:layout_gravity="right"
            android:layout_below="@id/bgname"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_button_rounded_accent"
            android:textColor="@color/white" />
    </RelativeLayout>



</LinearLayout>