<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="30dp"
    tools:context=".Fragments.MarkerUserFragment">
    <LinearLayout
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_porcelen"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"

        android:weightSum="1">
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/gray1"
            >
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:id="@+id/fragment_user_thumb"
                android:src="@mipmap/ic_launcher"
                />
        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_button_rounded_accent"
            android:paddingRight="8dp"
            android:paddingBottom="6dp"
            android:paddingLeft="8dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Name"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:id="@+id/fragment_user_name"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:textColor="#fff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="HP"
                android:id="@+id/fragment_user_hp"
                android:textColor="#fff" />


        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="124dp"
        android:layout_height="37dp"
        android:text="Lihat Detail"
        android:id="@+id/fragment_user_BTN_detail"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_button_rounded_accent"
        android:textColor="@color/white" />

</LinearLayout>