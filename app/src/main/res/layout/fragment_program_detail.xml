<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragments.MarkerUserFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="10dp"
        android:layout_marginBottom="10dp"></FrameLayout>

    <LinearLayout
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_porcelen"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:weightSum="1">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <TextView
                android:fontFamily="sans-serif-smallcaps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:textStyle="bold"
                android:id="@+id/fragment_program_start"
                android:layout_gravity="left"
                android:gravity="right" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textAllCaps="true"
                android:text="Large Text"
                android:id="@+id/fragment_program_name"
                android:textColor="@color/red_500"
                android:textStyle="bold|italic"
                android:gravity="center_vertical|left" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/actlighorange"
                android:paddingBottom="8dp" />


            <TextView
                android:fontFamily="sans-serif-smallcaps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textAllCaps="true"
                android:text="Medium Text"
                android:id="@+id/fragment_program_supervisor"
                android:layout_gravity="left|center_horizontal|right"
                android:textColor="@color/gray3" />
            <TextView
                android:fontFamily="sans-serif-smallcaps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Medium Text"
                android:id="@+id/fragment_program_verified"
                android:layout_gravity="left|center_horizontal|right"
                android:textColor="@color/gray3" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Lihat Detail"
        android:id="@+id/fragment_program_BTN_detail"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_button_rounded_accent"
        android:textColor="@color/white" />

</LinearLayout>