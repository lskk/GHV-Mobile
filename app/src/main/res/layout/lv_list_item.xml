<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="1dp"
    android:paddingBottom="1dp">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        card_view:contentPadding="5dp"
        card_view:cardCornerRadius="5dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/gray2"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <TextView
                android:fontFamily="sans-serif-smallcaps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:textStyle="bold"
                android:id="@+id/lv_program_start"
                android:layout_gravity="left"
                android:gravity="right" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/lv_program_name"
                android:textColor="@color/red_500"
                android:textStyle="bold|italic"
                android:gravity="center_vertical|left" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/actlighorange"
                android:paddingBottom="8dp" />


            <TextView
                android:fontFamily="sans-serif-smallcaps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Medium Text"
                android:id="@+id/lv_program_supervisor"
                android:layout_gravity="left|center_horizontal|right"
                android:textColor="@color/gray3" />
            <TextView
                android:fontFamily="sans-serif-smallcaps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Medium Text"
                android:id="@+id/lv_program_verified"
                android:layout_gravity="left|center_horizontal|right"
                android:textColor="@color/gray3" />

        </LinearLayout>

    </android.support.v7.widget.CardView>






</LinearLayout>